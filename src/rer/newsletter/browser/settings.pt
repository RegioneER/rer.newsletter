<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="here/prefs_main_template/macros/master"
  i18n:domain="rer.newsletter">

<body>

<metal:override fill-slot="top_slot"
                tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                            disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

<div metal:fill-slot="prefs_configlet_main">

    <a id="setup-link" class="link-parent"
       tal:attributes="href string:$portal_url/@@overview-controlpanel">
        Site Setup
    </a>

    <h1 class="documentFirstHeading"
        i18n:translate="">Newsletter</h1>

    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
        Portal status message
    </div>

    <div id="content-core">
        <ul>
            <li tal:repeat="list view/getLists">
                <strong tal:content="list">newsletter@xyz.org</strong>
                <p>
                  members:
                  <ul>
                      <li tal:repeat="member list/members" tal:content="member">user@xyz.org</li>
                  </ul>
                </p>

                <p>
                  requests:
                  <ul>
                      <li tal:repeat="member list/requests" tal:content="member">user@xyz.org</li>
                  </ul>
                </p>
            </li>
        </ul>
    </div>
</div>

</body>
</html>
