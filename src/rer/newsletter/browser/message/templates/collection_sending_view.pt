

<metal:block use-macro="context/@@listing_view/macros/content-core">

  <metal:entries fill-slot="entries">
    <metal:block use-macro="context/@@listing_view/macros/entries"
        tal:define="portal context/@@plone_portal_state/portal;
                    image_scale portal/@@image_scale">
      <metal:entry fill-slot="entry">
        <article class="tileItem">

            <div tal:define="thumb_url python:item_url + '/@@images/image/' + 'preview';
                             item_has_image python: view.item_has_image(obj);
                             item_has_preview_image python: view.item_has_preview_image(obj)"
                 tal:condition="python: item_has_image or item_has_preview_image"
                 tal:attributes="class python: 'tileImage' if item_description else 'tileImageNoFloat'">
              <a tal:attributes="href item_link" tal:condition="python: item_has_image and not item_has_preview_image">
                <img tal:replace="structure python:image_scale.tag(item, fieldname='image', width=600, height=230, css_class='thumb-preview', direction='down')" />
              </a>
              <a tal:attributes="href item_link" tal:condition="python: item_has_preview_image">
                <img tal:replace="structure python:image_scale.tag(item, fieldname='preview_image', width=600, height=230, css_class='thumb-preview', direction='down')" />
              </a>
            </div>


          <div class="content">
            <h2 class="tileHeadline obj-title" metal:define-macro="listitem">
              <a class="summary url"
                  tal:attributes="href item_link;
                                  title item_type"
                  tal:content="item_title">
                Item Title
              </a>
            </h2>
            <div class="tileBody" tal:condition="item_description">
                <span class="description" tal:content="item_description">
                  description
                </span>
            </div>
            <a class="readMore" tal:attributes="href item_link">
              Leggi di pi√π
            </a>
          </div>


          <div class="visualClear"><!-- --></div>

        </article>

      </metal:entry>
    </metal:block>
  </metal:entries>

</metal:block>

